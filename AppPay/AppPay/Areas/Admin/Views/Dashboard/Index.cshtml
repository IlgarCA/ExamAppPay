@model List<FeaturesModel>

@{
    ViewData["Title"] = "Feature";
}


<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Feature Table</h4>
                        <a class="btn btn-danger sm-2" asp-action="Create">
                            <i class="mdi mdi-table-row-plus-after"></i>
                        </a>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            Title
                                        </th>
                                        <th>
                                            Description
                                        </th>
                                        <th>
                                            Icon
                                        </th>
                                        <th>
                                            Setting
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (FeaturesModel featuresModel in Model)
                                    {
                                        <tr>
                                            <td>
                                                @featuresModel.Title
                                            </td>
                                            <td>
                                                @featuresModel.Description
                                            </td>
                                            <td>
                                                @featuresModel.Icon
                                            </td>
                                            <td>
                                                <a class="btn btn-primary sm-2" asp-action="Update" asp-route-id="@featuresModel.Id">
                                                    <i class="mdi mdi-tooltip-edit" ></i>
                                                </a>
                                                <a class="btn btn-warning sm-2" asp-action="Delete" asp-route-id="@featuresModel.Id">
                                                    <i class="mdi mdi-delete"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
